<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maplinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:id="@+id/mapactionbarleftbut"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/actionbatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapactionbar_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/actionbatshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapactionbar_shops"
            android:layout_alignTop="@+id/actionbatTitle"
            android:layout_toRightOf="@+id/actionbatTitle"
            android:layout_toEndOf="@+id/actionbatTitle"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/actionbatlocate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapactionbar_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>
    <com.amap.api.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.amap.api.maps.MapView>
</LinearLayout>
